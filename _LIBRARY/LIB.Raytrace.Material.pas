function TMyMaterial.Scatter( const Ray_:TRay; const Hit_:TRayHit ) :TSingleRGBA;
var
   Hit :TRayHitNor;
   I :Integer;
   L :TRayLight;
   H :TRayHit;
   V :TSingle3D;
   D :Single;
begin
     Hit := TRayHitNor( Hit_ );

     Result := 0;

     for I := 0 to World.LightsN-1 do
     begin
          L := World.Lights[ I ];
          H := L.RayJoins( Hit_ );

          if Assigned( H ) then
          begin
               V := Hit_.Pos.UnitorTo( H.Pos );
               D := DotProduct( Hit.Nor, V );
               if D < 0 then D := 0;

               Result := Result + D * L.Color;

               H.Free;
          end;
     end;

     Result.A := 1;
end;

